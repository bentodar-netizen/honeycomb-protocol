{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./contracts/dist",
    "declaration": true
  },
  "include": [
    "hardhat.config.cts",
    "contracts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
